        </div>
        <div class="col-md-12">
            <article class="page">
                <h1>Todo</h1>
                <ul class="timeline">
                    {{#each works}}
                        <li id="tr{{_id}}"
                            class="timeline-milestone {{# if status}} is-completed  {{^}}is-current {{/if}} timeline-start">
                            <div class="timeline-action">
                                <button style="float: right" onclick="workremove('{{_id}}')" class="btn btn-link">
                                    <span class="glyphicon glyphicon-remove-sign"></span>
                                </button>
                                <button style="float: right" onclick="workcomplete('{{_id}}')" class="btn btn-link">
                                    <span class="glyphicon glyphicon-ok-sign"></span>
                                </button>
                                <h2 class="title">{{date}}</h2>
                                <span class="date">{{tag}}</span>
                                <div class="content">
                                    {{description}}
                                </div>
                            </div>
                        </li>
                    {{/each}}

                    <li class="timeline-milestone is-future timeline-end">
                        <div class="timeline-action">
                            <div class="content">
                                <form class="form-horizontal" method="post" action="/add-work">
                                    <div class="form-group">

                                        <div class="col-sm-12">
                                            <textarea name="description" class="form-control" placeholder="Mission"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <div class=" col-sm-12">
                                            <label class="checkbox-inline">
                                                <input name="tag" value="mongo" type="checkbox"> mongo
                                            </label>
                                            <label class="checkbox-inline">
                                                <input name="tag" value="node" type="checkbox"> node
                                            </label>
                                            <label class="checkbox-inline">
                                                <input type="checkbox" id="inlineCheckbox3" value="option3"> 3
                                            </label>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button type="submit" class="btn btn-default">OK</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>
            </article>
        </div>
